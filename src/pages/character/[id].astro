---
export async function getStaticPaths() {
    const res = await fetch(`https://cloudflare-functions-astro.pages.dev/characters/all`);
    const characters = await res.json();
    const paths = characters.characters.map(character => ({
        params: {id: character.id}
    }));
  return paths
}

const {id} = Astro.params;
let character;
try {
    const res = await fetch(`${import.meta.env.API_URL}/character/${id}`);
    character = await res.json();
} catch (error) {
    character = {
        name: 'API Failure',
        image: ''
    }
}

---

<h1>{character.name}</h1>

<img src={character.image} />

<p><a href="/">&lt; Back Home</a></p>